<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.produtosservice.domain.mapper.FilialMapper">

    <insert id="inserir"  useGeneratedKeys="true" keyProperty="id" keyColumn="id"
            parameterType="com.example.produtosservice.domain.model.Filial">

        INSERT INTO filial (nome) VALUES (#{nome})
    </insert>

    <update id="atualizar">
        UPDATE
            filial
        SET
            nome = #{nome}
        WHERE
            id =#{id}
    </update>

    <resultMap id="filialResultMap" type="com.example.produtosservice.domain.model.Filial">
        <result property="id" column="id"/>
        <result property="nome" column="nome"/>
        <collection property="estoques" resultMap="estoqueResultMap"></collection>
    </resultMap>

    <resultMap id="estoqueResultMap" type="com.example.produtosservice.domain.model.Estoque">
        <result property="id" column="estoque_id"/>
        <result property="quantidade" column="estoque_quantidade"/>
        <association property="produto" resultMap="produtoResultMap"/>
    </resultMap>

    <resultMap id="produtoResultMap" type="com.example.produtosservice.domain.model.Produto">
        <result property="id" column="produto_id"/>
        <result property="nome" column="produto_nome"/>
        <result property="preco" column="produto_preco"/>
    </resultMap>

    <select id="listar" resultMap="filialResultMap">
        SELECT
            f.id                as id,
            f.nome              as nome,
            e.id                as estoque_id,
            p.id                as produto_id,
            p.nome              as produto_nome,
            p.preco             as produto_preco,
            e.quantidade        as estoque_quantidade
        FROM
            filial f
        INNER JOIN
            estoque e
        ON
            e.filial_id = f.id
        INNER JOIN
            produto p
        ON
            p.id = e.produto_id
    </select>

    <select id="porId" resultMap="filialResultMap" parameterType="Long">
        SELECT
            f.id                as id,
            f.nome              as nome,
            e.id                as estoque_id,
            p.id                as produto_id,
            p.nome              as produto_nome,
            p.preco             as produto_preco,
            e.quantidade        as estoque_quantidade
        FROM
            filial f
        INNER JOIN
            estoque e
        ON
            e.filial_id = f.id
        INNER JOIN
            produto p
        ON
            p.id = e.produto_id
        WHERE
            e.id = #{id}
    </select>

</mapper>